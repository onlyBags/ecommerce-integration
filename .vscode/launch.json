  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Ecommerce Db",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/packages/ecommerce-db/dist/index.js",
      "preLaunchTask": "BuildDb",
      "outFiles": ["${workspaceFolder}/packages/ecommerce-db/dist/**/*.js"]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Ecommerce Server",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/packages/ecommerce-server/src/index.ts",
      "preLaunchTask": "BuildServer",
      "outFiles": ["${workspaceFolder}/packages/ecommerce-server/dist/**/*.js"]
    }
  ]
}
