{
  "name": "dg-live",
  "version": "0.0.1",
  "license": "MIT",
  "scripts": {
    "start": "docker-compose --env-file .env.prod -f docker-compose.yml up --build",
    "start:d": "docker-compose --env-file .env.prod -f docker-compose.yml up --build -d",
    "start:linux": "docker compose --env-file .env.prod -f docker-compose.yml up --build -d",
    "start:debug": "docker-compose --env-file .env.prod -f docker-compose.debug.yml up --build",
    "start:dev": "docker-compose --env-file .env.dev -f docker-compose.dev.yml up --build",
    "build:server": "nx run-many -t build",
    "build": "nx run-many -t build",
    "watch:all": "nx run-many -t watch",
    "dev": "cd packages/ecommerce-server && npm run dev",
    "prod": "cd packages/ecommerce-server && npm run prod",
    "debug": "cd packages/ecommerce-server && npm run debug",
    "build:db": "cd packages/ecommerce-db && npm run build",
    "build:types": "cd packages/ecommerce-data-types && npm run build",
    "build:config": "cd packages/ecommerce-config && npm run build",
    "build:wc": "cd packages/ecommerce-woocommerce && npm run build",
    "build:websocket": "cd packages/ecommerce-websocket && npm run build",
    "build:web3": "cd packages/ecommerce-web3 && npm run build",
    "affected:graph": "nx affected:graph",
    "affected:apps:json": "nx affected:graph --base=main --head=HEAD --file=affected-graph.json",
    "docker:prune:volume": "docker volume prune -a --force --filter \"label!=dg-live-monorepo_db\"",
    "docker:kill:all": "docker kill $(docker ps -q)"
  },
  "workspaces": [
    "packages/*"
  ],
  "private": true,
  "devDependencies": {
    "@faker-js/faker": "^8.3.1",
    "@nx/jest": "^16.2.1",
    "@nx/js": "16.2.1",
    "@types/aws-sdk": "^2.7.0",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.1",
    "@types/lodash": "^4.14.200",
    "@types/node": "^20.1.7",
    "@types/oauth": "^0.9.1",
    "@types/supertest": "^2.0.12",
    "@types/swagger-ui-express": "^4.1.3",
    "@types/uuid": "^9.0.6",
    "@types/woocommerce__woocommerce-rest-api": "^1.0.2",
    "@types/ws": "^8.5.8",
    "@typescript-eslint/eslint-plugin": "^5.59.6",
    "@typescript-eslint/parser": "^5.59.6",
    "copy-files-from-to": "^3.9.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.40.0",
    "eslint-config-prettier": "^8.8.0",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.4.1",
    "jest-environment-node": "^29.5.0",
    "nx": "16.2.1",
    "prettier": "^2.8.8",
    "supertest": "^6.3.3",
    "swagger-ui-express": "^4.6.3",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "tsc-watch": "^6.0.4",
    "typescript": "^5.0.4"
  },
  "dependencies": {
    "@woocommerce/woocommerce-rest-api": "^1.0.1",
    "aws-sdk": "^2.1574.0",
    "axios": "^1.4.0",
    "ci": "^2.3.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "form-data": "^4.0.0",
    "helmet": "^7.0.0",
    "lodash": "^4.17.21",
    "mysql2": "^3.3.1",
    "nodemon": "^3.0.1",
    "oauth-1.0a": "^2.2.6",
    "redis": "^4.6.7",
    "redis-om": "^0.4.2",
    "reflect-metadata": "^0.1.13",
    "tslib": "^2.3.0",
    "tsoa": "^5.1.1",
    "typeorm": "^0.3.16",
    "uuid": "^9.0.1",
    "web3-eth-accounts": "^4.1.1",
    "ws": "^8.14.2"
  }
}
